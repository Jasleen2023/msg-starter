{
  "name": "msg-starter",
  "version": "1.0.0",
  "description": "Starter site for the mini site generator",
  "main": "index.js",
  "scripts": {
    "start": "run-p start:*",
    "start:server": "http-server ./docs/",
    "start:watch": "run-p watch:*",
    "watch:markup": "sane \"npm run build:markup\" src --glob='**/*.js' --poll",
    "watch:css": "sane \"npm run build:css\" src/css --glob='**/*.css' --poll",
    "build:markup": "msg -io ./src/ ./docs/",
    "build:css": "postcss --use postcss-import postcss-custom-media autoprefixer cssnano -o docs/main.css src/css/main.css --no-map"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ijmccallum/msg-starter.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ijmccallum/msg-starter/issues"
  },
  "homepage": "https://github.com/ijmccallum/msg-starter#readme",
  "devDependencies": {
    "cssnano": "^3.10.0",
    "html-minifier": "^3.5.8",
    "http-server": "^0.11.1",
    "mini-site-generator": "^1.0.10",
    "npm-run-all": "^4.1.2",
    "postcss": "^6.0.18",
    "postcss-cli": "^5.0.0",
    "postcss-cssnext": "^3.1.0",
    "postcss-custom-media": "^6.0.0",
    "postcss-import": "^11.1.0",
    "sane": "^2.4.1"
  }
}
